@model BusinessEntity.BEExpediente

@{
    ViewBag.Title = "Nuevo ET";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h4 class="panel-title">Registro de Expedientes</h4>
    </div>
    <div class="panel-body panel-collapse collapse in" id="collapseET">
        @using (Html.BeginForm("Crear","Expedientes",FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.EditorFor(model => model.IDVersion, new { htmlAttributes = new { @class = "form-control",@style = "display:none;" } })
            {
                if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-@ViewBag.Alerta">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @ViewBag.Mensaje
                    </div>
                }
            }
            <div class="row">
                <div class="col-xs-12 col-md-3">
                    <div class="form-group">
                        <label>Snip</label>
                        @Html.EditorFor(model => model.Snip, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Snip, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-xs-12 col-md-3">
                    <div class="form-group">
                        <label>Sección</label>
                        @Html.EditorFor(model => model.Seccion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Estudio..." } })
                        @Html.ValidationMessageFor(model => model.Seccion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-xs-12 col-md-3">
                    <div class="form-group">
                        <label>Serie</label>
                        @Html.EditorFor(model => model.Serie, new { htmlAttributes = new { @class = "form-control", @placeholder = "Proyecto de inversión..!" } })
                        @Html.ValidationMessageFor(model => model.Serie, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-xs-12 col-md-3">
                    <div class="form-group">
                        <label>Sub Serie</label>
                        @Html.EditorFor(model => model.SubSerie, new { htmlAttributes = new { @class = "form-control", @placeholder = "Expediente técnico..!" } })
                        @Html.ValidationMessageFor(model => model.SubSerie, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-md-3">
                    <div class="form-group">
                        <label>Numero HT</label>
                        @Html.EditorFor(model => model.NumeroHT, new { htmlAttributes = new { @class = "form-control", @placeholder = "E-000152-2017" } })
                        @Html.ValidationMessageFor(model => model.NumeroHT, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-xs-12 col-md-3">
                    <div class="form-group">
                        <label>N° Doc. Ingreso</label>
                        @Html.EditorFor(model => model.NVersion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Oficio N°..!" } })
                        @Html.ValidationMessageFor(model => model.NVersion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-xs-12 col-md-3">
                    <div class="form-group">
                        <label>Etapa</label>
                        @Html.EditorFor(model => model.Etapa, new { htmlAttributes = new { @class = "form-control", @placeholder = "Admisibilidad" } })
                        @Html.ValidationMessageFor(model => model.Etapa, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-xs-12 col-md-3">
                    <div class="form-group">
                        <label>Sede</label>                       
                        @Html.DropDownListFor(model => model.IDSede, ViewData["Sedes"] as SelectList, new { @class = "form-control" })
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-xs-12 col-md-3">
                    <div class="form-group">
                        <label>Ubicación (E:C:B)</label>
                        @Html.EditorFor(model => model.UbicacionECB, new { htmlAttributes = new { @class = "form-control", @placeholder = "21:A:6" } })
                        @Html.ValidationMessageFor(model => model.UbicacionECB, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-xs-12 col-md-3">
                    <div class="form-group">
                        <label>Ubicación (PQ:PO)</label>
                        @Html.EditorFor(model => model.UbicacionPP, new { htmlAttributes = new { @class = "form-control", @placeholder = "8:4" } })
                        @Html.ValidationMessageFor(model => model.UbicacionPP, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-sm" ><span class="glyphicon glyphicon-floppy-disk"></span> Grabar</button>
                    </div>
                </div>
            </div>                
        }
    </div>
</div>
