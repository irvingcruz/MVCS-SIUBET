<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MVCS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link href="~/Scripts/devextreme/css/dx.spa.css" rel="stylesheet" />
    <link href="~/Scripts/devextreme/css/dx.common.css" rel="stylesheet" />
    <link href="~/Scripts/devextreme/css/dx.light.compact.css" rel="stylesheet" />
    <script src="~/Scripts/devextreme/js/dx.all.js"></script>

    @*Archivos personalizados por ICR*@
    <link rel="shortcut icon" href="~/assets/ico/favicon.ico">
    <script src="~/Scripts/devextreme/global-app.js"></script>
    <link href="~/Content/mi.estilo.css" rel="stylesheet" />    

    <link href="//cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/e8bddc60e73c1ec2475f827be36e1957af72e2ea/build/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment-with-locales.js"></script>
    <script src="//cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/e8bddc60e73c1ec2475f827be36e1957af72e2ea/src/js/bootstrap-datetimepicker.js"></script>

    <script src="~/Scripts/devextreme/1.Padre.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            @*<div class="navbar-header" style="height: 10px;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SIUBET", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>*@
            @*<div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                </ul>
            </div>*@
            <ul class="nav navbar-nav navbar-right ">
                <li class="dropdown panelSession">
                    @{
                        if (Request.IsAuthenticated)
                        {
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Bienvenido: | <label style="font-style: italic; text-transform: uppercase;"> @User.Identity.Name </label>  <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                <li><a href="javascript:document.getElementById('logoutForm').submit()"> > Cerrar Sesión</a></li>
                                }
                            </ul>
                        }
                        else { }
                    }

                </li>

            </ul>

        </div>
    </div>
    <div class="container body-content">
        <div style="height: 35px;">-</div>
        <div class="jumbotron banner">
            <img id="logo" src="" />
        </div>
        <div class="row menu">
            <ul class="nav nav-tabs nav-justified">
                <li><a href="@Url.Action("Index","Expedientes")"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Inicio</a></li>
                <li><a href="@Url.Action("DDIndex","Movimiento")"><span class="glyphicon glyphicon-repeat" aria-hidden="true"></span> Dev. y Derivaciones</a></li>
                <li><a href="@Url.Action("PreIndex","Movimiento")"><span class="glyphicon glyphicon-retweet" aria-hidden="true"></span> Préstamos</a></li>
                <li><a href="@Url.Action("TIndex","Movimiento")"><span class="glyphicon glyphicon-share" aria-hidden="true"></span> Transferencias</a></li>
                <li><a href="@Url.Action("RIndex","Movimiento")"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Servicios</a></li>
                @*<li><a href="@Url.Action("RIndex","Movimiento")"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Servicios</a></li>*@
                @if (User.IsInRole("1"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-tags" aria-hidden="true"></span>&nbsp;&nbsp;Opciones</a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Crear","Expedientes")"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo Ingreso</a></li>
                            <li><a href="@Url.Action("Register","Account")"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo Usuario</a></li>
                        </ul>
                    </li>
                }
            </ul>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - OGEI | MVCS</p>
        </footer>
    </div>

    
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
